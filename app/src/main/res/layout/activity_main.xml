<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
            android:text="Username"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Pesquisar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btPesquisar" app:layout_constraintStart_toStartOf="@+id/imputUsuario"
            app:layout_constraintEnd_toEndOf="@+id/imputUsuario" android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imputUsuario" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Seu nome"
            android:ems="10"
            android:id="@+id/imputUsuario" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/textView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/ivUsuario"
            app:layout_constraintStart_toStartOf="@+id/btPesquisar"
            app:layout_constraintEnd_toEndOf="@+id/btPesquisar" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btPesquisar" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="Android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvNomeUsuario" app:layout_constraintStart_toStartOf="@+id/ivUsuario"
            app:layout_constraintEnd_toEndOf="@+id/ivUsuario" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivUsuario" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.067"/>
</androidx.constraintlayout.widget.ConstraintLayout>